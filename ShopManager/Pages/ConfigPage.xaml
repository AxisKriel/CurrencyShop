<UserControl x:Class="ShopManager.Pages.ConfigPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <mui:ModernTab x:Name="optionsPanel" Layout="List" SelectedSource="/Pages/Config/UseGiveItemSSC.xaml">
            <mui:ModernTab.Links>
                <!-- TODO: set @Source -->
                <mui:Link DisplayName="usegiveitemssc" Source="/Pages/Config/UseGiveItemSSC.xaml" />
                <mui:Link DisplayName="items" Source="/Pages/Config/ItemsPage.xaml" />
                <mui:Link DisplayName="kits" Source="/Pages/Config/KitsPage.xaml" />
            </mui:ModernTab.Links>
        </mui:ModernTab>
    </Grid>
</UserControl>
