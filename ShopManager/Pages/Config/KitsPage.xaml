<UserControl x:Class="ShopManager.Pages.Config.KitsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <TextBlock Text="Kits" Style="{StaticResource Heading2}" />
                <TextBlock TextWrapping="Wrap" Text="Contains a list of item kits which players may purchase at the shop. Select a kit from the list below or click add new to begin." />
                <Line Height="10"/>
                <StackPanel Orientation="Horizontal">
                    <DockPanel>
                        <ListBox x:Name="kitsTab" DockPanel.Dock="Left">
                            
                        </ListBox>
                        <mui:ModernFrame>
                            
                        </mui:ModernFrame>
                    </DockPanel>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
